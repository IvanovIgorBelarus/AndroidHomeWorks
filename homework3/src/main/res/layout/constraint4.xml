<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/colorBlack"
        android:minHeight="?attr/actionBarSize"
        android:paddingTop="24dp"
        android:paddingEnd="16dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="null"
            android:drawableEnd="@drawable/ic_search_white_36dp"
            android:hint="@string/android_course"
            android:textColorHighlight="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constr1"
        style="@style/MyConstraint"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:id="@+id/text1"
            style="@style/MyTextViewConstr4.1"
            android:text="@string/photo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/MyTextViewConstr4"
            android:text="@string/certificated"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="@id/text1"
            app:layout_constraintLeft_toLeftOf="@id/text1" />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingEnd="8dp"
            app:layout_constraintRight_toRightOf="@id/text1"
            app:layout_constraintTop_toBottomOf="@id/text1">

            <TextView
                style="@style/MyImageConstr4"
                android:drawableTop="@drawable/ic_favorite_black_36dp" />

            <TextView
                style="@style/MyImageConstr4"
                android:drawableTop="@drawable/ic_turned_in_black_36dp" />

            <TextView
                style="@style/MyImageConstr4"
                android:drawableTop="@drawable/ic_share_black_36dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/constr1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constr2"
            style="@style/MyConstraint"
            android:layout_marginStart="8dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text2"
                style="@style/MyTextViewConstr4.1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/MyTextViewConstr4"
                android:text="@string/layouts"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="@id/text2"
                app:layout_constraintLeft_toLeftOf="@id/text2" />

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintRight_toRightOf="@id/text2"
                app:layout_constraintTop_toBottomOf="@id/text2">

                <TextView
                    style="@style/MyImageConstr4"
                    android:drawableTop="@drawable/ic_favorite_black_36dp" />

                <TextView
                    style="@style/MyImageConstr4"
                    android:drawableTop="@drawable/ic_turned_in_black_36dp" />

                <TextView
                    style="@style/MyImageConstr4"
                    android:drawableTop="@drawable/ic_share_black_36dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constr3"
            style="@style/MyConstraint"
            android:layout_marginEnd="8dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text3"
                style="@style/MyTextViewConstr4.1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                style="@style/MyTextViewConstr4"
                android:text="@string/Views"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="@id/text3"
                app:layout_constraintLeft_toLeftOf="@id/text3" />

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintRight_toRightOf="@id/text3"
                app:layout_constraintTop_toBottomOf="@id/text3">

                <TextView
                    style="@style/MyImageConstr4"
                    android:drawableTop="@drawable/ic_favorite_black_36dp" />

                <TextView
                    style="@style/MyImageConstr4"
                    android:drawableTop="@drawable/ic_turned_in_black_36dp" />

                <TextView
                    style="@style/MyImageConstr4"
                    android:drawableTop="@drawable/ic_share_black_36dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>